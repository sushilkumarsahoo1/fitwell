{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"],
      "@context/*": ["./src/context/*"],
      "@screens/*": ["./src/screens/*"],
      "@components/*": ["./src/components/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@utils/*": ["./src/utils/*"],
      "@types/*": ["./src/types/*"],
      "@constants/*": ["./src/constants/*"],
      "@services/*": ["./src/services/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": [
    "node_modules",
    "image-recognition-archive/**",
    "src/screens/app/FoodRecognitionScreen.tsx",
    "src/screens/app/FoodRecognitionScreen_New.tsx",
    "src/screens/app/FoodRecognitionScreen.tsx.bak",
    "test-*.ts",
    "**/*.bak",
    "**/*.backup"
  ]
}
